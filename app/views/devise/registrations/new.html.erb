<div class="route">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-xs-12 route-highlight-cell text-center">
        Create System Credentials
      </div>
    </div>
    <div class="row">
      <div class="route-input-label">
        Email Address:
      </div>
      <div class="route-input-cell">
        <%= f.email_field :email, placeholder: "user@email.com" %>
      </div>
      <div class="route-input-label">
        Commander Callsign:
      </div>
      <div class="route-input-cell">
        <%= f.text_field :name, placeholder: "Maverick" %>
      </div>
    </div>
    <div class="row">
      <div class="route-input-label">
        Password:
      </div>
      <div class="route-input-cell">
        <%= f.password_field :password %>
      </div>
      <div class="route-input-label">
        Password Confirmation:
      </div>
      <div class="route-input-cell">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 route-input-cell route-input-submit border-top clear-padding">
        <%= f.submit 'Sign up' %>
      </div>
    </div>
  <% end %>
</div>
